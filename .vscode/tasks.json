{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        // Ask dotnet build to generate full paths for file names.
        "/property:GenerateFullPaths=true",
        // Do not generate summary otherwise it leads to duplicate errors in Problems panel
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "run",
        "Program.cs"
      ],
      // Runs this command by default when using CTRL + SHIFT + B
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        // The folder for Program.cs needs to be same as Pong.csproj for run to succeed
        "cwd": "Pong"
      },
      // Always run 'build' task before 'run'
      "dependsOn": ["build"],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
  ]
}